<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>fr.soleil</groupId>
        <artifactId>super-pom-C-CPP</artifactId>
        <version>18.1.2</version>
    </parent>

    <groupId>fr.soleil.lib.Lima.Camera</groupId>
    <artifactId>LimaPerkinElmer-${aol}-shared-${mode}</artifactId>
    <version>1.5.0</version>

    <packaging>nar</packaging>
    <name>LimaPerkinElmer</name>
    <description>This module controls the PerkinElmer Camera</description>
    
    <scm>
        <connection>scm:git:git://github.com/soleil-ica/Lima-camera-perkinelmer.git</connection>
        <developerConnection>scm:git:git://github.com/soleil-ica/Lima-camera-perkinelmer.git</developerConnection>
        <url>https://github.com/soleil-ica/Lima-camera-perkinelmer</url>
    </scm>
	
    <dependencies>
        <dependency>
            <groupId>fr.soleil.lib</groupId>
            <artifactId>LimaCore-${aol}-shared-${mode}</artifactId>
            <version>1.7.9</version>
        </dependency>
        <dependency>
            <groupId>fr.soleil.lib</groupId>
            <artifactId>LimaProcesslib-${aol}-shared-${mode}</artifactId>
            <version>1.3.9</version>
        </dependency>
    </dependencies>
    
    <properties>
		<sdkperkin-lib>${project.basedir}\sdk64\3.3.4.410\</sdkperkin-lib>
		<sdkperkin-include>${project.basedir}\sdk64\3.3.4.410\</sdkperkin-include>
	</properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.freehep</groupId>
                <artifactId>freehep-nar-plugin</artifactId>
                <version>2.0-alpha-17-SOLEIL</version>
                <configuration>
                    <cpp>
						<sourceDirectory>src</sourceDirectory>
						<includePaths>
							<includePath>include</includePath>
							<includePath>${sdkperkin-include}</includePath>
						</includePaths>
						<defines>
							<define>LIBPERKINELMER_EXPORTS</define>
							<define>WIN32</define>
							<define>NDEBUG</define>
							<define>_WINDOWS</define>
							<define>_USRDLL</define>
							<define>_WIN32_WINNT=_WIN32_WINNT_WIN7</define>
							<define>LIMA_PROCESSCORE_DLL</define>
							<define>LIMA_PROCESSCORE_BUILD</define>		
						</defines>
					</cpp>
                    
                    <linker>
						<sysLibs>
							<sysLib>
								<name>Advapi32</name>
								<type>shared</type>
							</sysLib>
						</sysLibs>
					
						<libs>
							<lib>
								<name>XISL</name>
								<type>shared</type>
								<directory>${sdkperkin-lib}</directory>
							</lib>
						</libs>
					</linker>
                    
                    <libraries>
                        <library>
                            <type>shared</type>
                        </library>
                    </libraries>
                </configuration>
            </plugin>
            <plugin>
                <groupId>fr.soleil.maven.plugins</groupId>
                <artifactId>maven-check-plugin</artifactId>
                <configuration>
                    <enable>false</enable>
                </configuration>
            </plugin>
        </plugins>
    </build>
	
    <developers>
        <developer>
            <id>langlois</id>
            <name>langlois</name>
            <url>http://controle/</url>
            <organization>Synchrotron Soleil</organization>
            <organizationUrl>http://www.synchrotron-soleil.fr</organizationUrl>
            <roles>
                <role>manager</role>
            </roles>
            <timezone>1</timezone>
        </developer>
        <developer>
            <id>noureddine</id>
            <name>noureddine</name>
            <url>http://controle/</url>
            <organization>Synchrotron Soleil</organization>
            <organizationUrl>http://www.synchrotron-soleil.fr</organizationUrl>
            <roles>
                <role>developer</role>
            </roles>
            <timezone>1</timezone>
        </developer>
    </developers>

</project>
